<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="RegisterFields">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/default16_margin</item>
        <item name="android:layout_marginRight">@dimen/default16_margin</item>
    </style>

    <style name="space_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/default8_margin</item>
    </style>

    <style name="find_space_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/default16_margin</item>
        <item name="android:layout_marginRight">@dimen/default16_margin</item>
        <item name="android:layout_marginTop">@dimen/default8_margin</item>
        <item name="android:layout_marginBottom">@dimen/default8_margin</item>
    </style>

</resources>
